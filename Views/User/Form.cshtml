@{
    ViewData["Title"] = "Form";
}

@section FormStyles {
    <link rel="stylesheet" href="~/css/form/style.css" />
}





<div class="container-fluid d-flex flex-column justify-content-center align-items-center py-5 gap-5">

    <div class="container border border-dark border-2 rounded-1" style="background-color: #2C2F3D;">
        <div class="container-fluid p-5  text-white text-center">
            <h1>UNION TERRITORY OF JAMMU AND KASHMIR</h1>
            <h2>SOCIAL WELFARE DEPARTMENT</h2>
            <h5 id="formType">@ViewData["formType"]</h5>
        </div>

        <form method="post" id="mainForm" action="/User/Form" enctype="multipart/form-data">
            <input type="hidden" name="docs" id="docs">
            <div id="serviceForm"></div>

            <div id="docForm" style="display: none;">
                <table class="table table-responsive table-bordered border-light text-white">
                    <thead>
                        <th>Type of Enclosure</th>
                        <th>Enclosure Document</th>
                        <th>File Reference</th>
                    </thead>
                    <tbody id="documentContainer">

                    </tbody>
                </table>
            </div>
            <div class="container table-responsive p-5 shadow-lg rounded mt-5 mb-5" id="formDetails"
                style="max-height: 800px; overflow-y: auto; background-color: #2C2F3D; display:none">
                <h1 class="text-center text-white fw-bold">VERIFY DETAILS</h1>
        </form>
    </div>



    <button class="btn btn-primary ms-auto me-auto d-none" id="showDoc" data-bs-toggle="modal"
        data-bs-target="#showDocument"></button>


    >



    <div class="modal" id="showDocument">
        <div class="modal-dialog modal-xl">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <!-- Modal body -->
                <div class="modal-body">
                    <div class="container-fluid" id="documentDisplay">
                        <iframe id="myIframe" style="width: 100%; height: 800px;"></iframe>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <script>
        const result = @Html.Raw(Json.Serialize(Model));
    </script>

    <script src="~/js/User/form/generateForms.js"></script>

    <script src="~/js/User/form/objects.js"></script>
    <script src="~/js/User/form/functions.js"></script>
    <script src="~/js/User/form/embed.js"></script>