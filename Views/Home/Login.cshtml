<form id="loginForm">
    <div class="container d-flex justify-content-center align-items-center py-5 auto-height">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0 d-flex flex-column gap-3 shadow-lg p-5 text-white rounded-3"
                        style="background-color: #2C2F3D;">
                        <h3 class="mb-4 text-center">LOGIN</h3>
                        <div class="form-group border border-light rounded-pill p-2">
                            <input type="text" class="form-control border-0 bg-transparent text-white" id="username"
                                placeholder="Username" required="">
                        </div>
                        <div class="form-group d-flex aling-items-center border border-light rounded-pill p-2">
                            <input id="password" type="password" class="form-control border-0 bg-transparent text-white"
                                placeholder="Password" required="">
                            <i class="bi bi-eye btn text-white" id="togglePassword"></i>
                        </div>
                        <div
                            class="form-group d-flex aling-items-center justify-content-between border border-light rounded-pill p-1">
                            <div id="captchaCanvas" class="d-flex justify-content-center gap-3 w-75 fs-3"></div>
                            <i id="refreshCaptcha" class="bi bi-arrow-clockwise btn fs-3 text-white"></i>
                        </div>
                        <div class="form-group border border-light rounded-pill p-2">
                            <input type="text" class="form-control border-0 bg-transparent text-white" id="captchaInput"
                                placeholder="Captcha">
                        </div>
                        <span id="captchaEroor" class="text-danger text-center"></span>

                        <div class="form-group rounded-pill p-2" style="background-color: #EF6603;">
                            <button type="submit" class="form-control text-white btn px-3 fs-6 fw-bold">Sign
                                In</button>
                        </div>
                        <span id="loginError" class="text-center fw-bold" style="color: #EF6603;"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


<script src="~/js/Home/login.js"></script>
