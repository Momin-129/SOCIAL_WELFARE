<form method="post" action="/Home/OTP">
    <div class="container d-flex justify-content-center align-items-center py-5 auto-height">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0 d-flex flex-column gap-3 shadow-lg p-5 text-white rounded-3"
                        style="background-color: #2C2F3D;">
                        <h3 class="mb-4 text-center">OTP VALIDATION @ViewData["userId"]</h3>
                        <h5 class="mb-4 text-center">An OTP has been sent to your email.</h5>
                        <div class="form-group border border-light rounded-pill p-2">
                            <input type="hidden" name="userId" value='@ViewData["userId"]'>
                            <input type="text" class="form-control border-0 bg-transparent text-white" name="otp"
                                placeholder="OTP" required="">
                        </div>
                        <div class="form-group rounded-pill p-2" style="background-color: #EF6603;">
                            <button type="submit" class="form-control text-white btn px-3 fs-6 fw-bold">Submit</button>
                        </div>
                        <span class="text-center fw-bold" style="color: #EF6603;">@ViewData["otpError"]</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
